<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivanmagda.musicartists">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MusicArtists">
        <activity
            android:name=".controllers.MusicArtistsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.ArtistDetailActivity"
            android:label="@string/title_activity_artist_detail"
            android:parentActivityName=".controllers.MusicArtistsActivity"
            android:theme="@style/Theme.MusicArtists">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ivanmagda.musicartists.controllers.MusicArtistsActivity" />
        </activity>
    </application>

</manifest>
